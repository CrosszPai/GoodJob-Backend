{
  "openapi": "3.0.1",
  "info": {
    "title": "GoodJob API",
    "description": "API document for GoodJob Project",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "https://goodjob-api.herokuapp.com/",
      "description": "Public API Server"
    },
    {
      "url": "http://localhost:8000",
      "description": "Local Server for backend development"
    }
  ],
  "components": {
    "schemas": {
      "location": {
        "type": "object",
        "properties": {
          "lat": {
            "type": "number"
          },
          "lon": {
            "type": "number"
          },
          "text": {
            "type": "string"
          }
        }
      },
      "position": {
        "type": "object",
        "properties": {
          "required": {
            "type": "integer"
          },
          "wage": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "user": {
        "type": "object",
        "properties": {
          "firstname": {
            "type": "string"
          },
          "gender": {
            "type": "string"
          },
          "current_role": {
            "type": "string"
          },
          "current_province": {
            "type": "string"
          },
          "interested": {
            "type": "string"
          },
          "introduce_text": {
            "type": "string"
          },
          "id_card": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "age": {
            "type": "string"
          },
          "photoURL": {
            "type": "string"
          }
        }
      },
      "job": {
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "start_date": {
            "type": "number"
          },
          "finish_date": {
            "type": "number"
          },
          "location": {
            "$ref": "#/components/schemas/location"
          },
          "mode": {
            "type": "string"
          },
          "positions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/position"
            }
          }
        }
      },
      "comment": {
        "type": "object"
      }
    }
  },
  "paths": {
    "/job/{id}/accept": {
      "put": {
        "description": "user ตอบรับ invite",
        "parameters": [{
          "in": "path",
          "required": true,
          "name": "id"
        }],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/job/{id}/comment": {
      "put": {
        "description": "reply comment",
        "parameters": [
          {
            "in": "path",
            "required": true,
            "name": "id",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "reply": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "description": "post comment",
        "parameters": [
          {
            "in": "path",
            "required": true,
            "name": "id",
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "content": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/all": {
      "get": {
        "description": "ดึงข้อมูล user ทั้งหมด",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/job/{id}": {
      "get": {
        "description": "ดึงข้อมูล job ตาม id",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "description": "แก้ไข job ตาม id",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/job"
              }
            }
          }
        }
      }
    },
    "/job": {
      "post": {
        "description": "สร้าง job",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/job"
              }
            }
          }
        }
      },
      "get": {
        "description": "เลือก job ของ owner จาก mode",
        "parameters": [
          {
            "in": "query",
            "name": "mode",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/user": {
      "put": {
        "description": "Update ข้อมูล user",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "get": {
        "description": "ดึงข้อมูล user จาก token ที่ส่งมา",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}
